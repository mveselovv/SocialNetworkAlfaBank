
.friends-possible
  background #FFF 
  box-shadow box-shadow-main 
  width 100% 
  padding 30px 40px 40px 
  margin-top 20px 

  @media (max-width breakpoint-xxl)
    padding 20px 30px 30px 

.friends-possible__title
  font-family font-exo 
  font-weight font-weight-bold 
  font-size 24px 
  color #000 
  margin-bottom 15px 
  margin-left 15px 

.friends-possible__list
  margin-bottom 15px 

.friends-possible__item
  display flex 
  align-items center 
  padding 15px 0 
  border-top 1px solid ui-cl-color-e6e6e6 

.friends-possible__pic
  width 50px 
  height 50px 
  border-radius border-half 
  overflow hidden 
  margin-right 20px 
  flex none 

  img
    width 100% 

.friends-possible__name
  font-weight font-weight-bold 
  font-size font-size-downdefault 
  color #000 
  display block 
  margin-right auto 

.friends-possible__link
  font-size font-size-small 
  color ui-cl-color-eucalypt 

.friends-possible__btn
  display flex 
  align-items center 
  justify-content center 
  width 100% 
  height 50px 
  border 2px solid ui-cl-color-eucalypt 
  cursor pointer 
  background transparent

  .simple-svg-wrapper
    width 16px 
    height 23px 
    margin-right 5px 

  .simple-svg
    stroke ui-cl-color-eucalypt 
    fill transparent  
