.tooltip
  display block !important
  z-index 10000
 
  .tooltip-inner
    background #fff
    padding 4px
    font-size font-size-super-medium-small
    color #2F2F37
    box-shadow box-shadow-main
	 border-radius border-super-small
 
  &[x-placement^="top"]
    margin-bottom 5px
 
  &[x-placement^="bottom"]
    margin-top 0
    margin-right 0
 
  &[x-placement^="right"]
    margin-left 5px
  
  &[x-placement^="left"]
    margin-right 5px
 
  &.popover
    $color #f9f9f9
 
    .popover-inner
      background $color
      color black
      padding 24px
      border-radius border-super-small
      box-shadow 0 5px 30px rgba(black, .1)
    
    .popover-arrow
      border-color $color 
 
  &[aria-hidden='true']
    visibility hidden
    opacity 0
    transition opacity .15s, visibility .15s
   
  &[aria-hidden='false']
    visibility visible
    opacity 1
    transition opacity .15s